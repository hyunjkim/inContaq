<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_contact_viewpager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contactlist.activities.ContactViewPagerActivity">

        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/viewpager_contact_tabs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_contact_tabs"
            style="@style/Base.Widget.Design.TabLayout"
            app:tabTextColor="@color/blue_sapphire"
            app:tabSelectedTextColor="@color/red_rose_madder"
            android:elevation="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.design.widget.TabLayout>


</LinearLayout>
