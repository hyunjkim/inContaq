<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background">


    <fragment
        android:id="@+id/graph_frag_container"
        android:name="nyc.c4q.jonathancolon.inContaq.contactlist.fragments.GraphFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </fragment>

    <RelativeLayout
        android:id="@+id/graph_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/graph_frag_container"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/monthly_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthly" />

        <Button
            android:id="@+id/weekly_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/monthly_btn"
            android:text="@string/weekly" />

        <Button
            android:id="@+id/daily_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/weekly_btn"
            android:text="@string/daily" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dayscounted_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/graph_btn">

        <TextView
            android:id="@+id/days_passed_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SET A REMINDER (THIS IS HARDCODED)"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/date_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dayscounted_tv"
        android:layout_gravity="center"
        android:spinnerMode="dropdown">
    </android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:id="@+id/sms_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="131dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textAlignment="center" />
</RelativeLayout>
