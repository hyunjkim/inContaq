<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_background">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/card_margin_end"
        android:layout_marginStart="@dimen/card_margin_start"
        android:layout_marginTop="@dimen/card_chart_margin_top"
        android:elevation="@dimen/card_elevation"
        android:padding="@dimen/card_chart_padding"
        app:cardBackgroundColor="#052635"
        app:cardCornerRadius="@dimen/card_chat_corner_radius">

        <com.db.chart.view.LineChartView
            android:id="@+id/daily_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_chart_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/line_chart_margin">
        </com.db.chart.view.LineChartView>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/date_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:spinnerMode="dropdown">
    </android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:id="@+id/days_passed_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/date_spinner"
        android:gravity="center"
        android:text="SET A REMINDER (THIS IS HARDCODED)"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sms_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="131dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textAlignment="center"/>
</RelativeLayout>
