<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nyc.c4q.jonathancolon.studentcouncilapp.contactlist.EditContactFragment"
    android:weightSum="1">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="206dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="204dp"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="202dp">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">


                <ImageView
                    android:layout_width="match_parent"
                    android:background="#000000"
                    android:text="Contact Name"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:elevation="15dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:layout_below="@+id/background_image"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/background_image"
                    android:layout_gravity="center"
                    android:background="#993443"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="150dp"
                    />

            </RelativeLayout>

            <ImageView
                android:id="@+id/contact_img"
                android:layout_gravity="center"
                android:background="#555777"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="91dp" />

            <TextView
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:id="@+id/editor_contact_name"
                android:text="Contact Name"
                android:textSize="20sp"
                android:gravity="center"
                android:elevation="15dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/contact_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                />


        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Phone Number: "
                android:scrollbars="vertical"/>

        </ScrollView>
    </LinearLayout>



</LinearLayout>
