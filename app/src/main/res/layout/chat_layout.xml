<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/primary_background"
              tools:context=".contactlist.activities.ContactViewPagerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/card_margin_start"
                    android:layout_marginRight="@dimen/card_margin_end"
                    android:layout_marginBottom="@dimen/card_chat_margin_btm"
                    app:cardCornerRadius="@dimen/card_chat_corner_radius"
                    android:elevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/received_chat_bubble_color"
                    android:id="@+id/chatBubble">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type_not_found"
                            android:textSize="@dimen/type_text_size"
                            android:textStyle="bold"
                            android:id="@+id/type"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:visibility="gone"
                            android:textColor="@color/light_font"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/senderId"
                            android:text="@string/phone_num_placeholder"
                            android:textSize="@dimen/sender_id_text_size"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:visibility="gone"
                            android:textColor="@color/light_font"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/messageDetails"
                            android:textSize="@dimen/default_text_size"
                            android:text="Tote bag authentic kombucha, neutra poutine street art pitchfork farm-to-table."
                            android:gravity="start"
                            android:layout_marginStart="@dimen/card_margin_start"
                            android:layout_marginEnd="@dimen/card_margin_end"
                            android:textColorLink="#0000ff"
                            android:textColor="@color/light_font"
                            android:linksClickable="true"
                            android:autoLink="all"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/timeDate"
                            android:visibility="visible"
                            android:textColor="@color/light_font"
                            android:textSize="@dimen/time_date_text_size"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:text="@string/placeholder_date"
                            android:layout_marginBottom="@dimen/time_date_margin_btm"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>




            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:layout_marginTop="30dp"
                android:gravity="end"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/card_margin_start"
                    android:layout_marginRight="@dimen/card_margin_end"
                    android:layout_marginBottom="@dimen/card_chat_margin_btm"
                    app:cardCornerRadius="@dimen/card_chat_corner_radius"
                    app:cardBackgroundColor="@color/sent_chat_bubble_color"
                    android:elevation="@dimen/card_elevation"
                    android:id="@+id/chatBubble2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type_not_found"
                            android:textSize="@dimen/type_text_size"
                            android:textStyle="bold"
                            android:id="@+id/type2"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:visibility="gone"
                            android:textColor="@color/light_font"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/senderId2"
                            android:text="@string/phone_num_placeholder"
                            android:textSize="@dimen/sender_id_text_size"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:visibility="gone"
                            android:textColor="@color/light_font"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/messageDetails2"
                            android:textSize="@dimen/default_text_size"
                            android:text="Food truck XOXO YOLO subway tile tofu cornhole, copper mug gastropub semiotics banjo organic gochujang. Thundercats activated charcoal skateboard, health goth hella pug blue bottle plaid distillery man bun hot chicken vice butcher aesthetic. "
                            android:gravity="start"
                            android:layout_marginStart="@dimen/card_margin_start"
                            android:layout_marginEnd="@dimen/card_margin_end"
                            android:textColorLink="#0000ff"
                            android:linksClickable="true"
                            android:textColor="@color/light_font"
                            android:autoLink="all"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/timeDate2"
                            android:visibility="visible"
                            android:textSize="@dimen/time_date_text_size"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:textColor="@color/light_font"
                            android:text="@string/placeholder_date"
                            android:layout_marginBottom="@dimen/time_date_margin_btm"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout2"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/card_margin_start"
                    android:layout_marginRight="@dimen/card_margin_end"
                    android:layout_marginBottom="@dimen/card_chat_margin_btm"
                    app:cardCornerRadius="@dimen/card_chat_corner_radius"
                    app:cardBackgroundColor="@color/received_chat_bubble_color"
                    android:elevation="@dimen/card_elevation"
                    android:id="@+id/chatBubble3">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type_not_found"
                            android:textSize="@dimen/type_text_size"
                            android:textStyle="bold"
                            android:id="@+id/type3"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:visibility="gone"
                            android:textColor="@color/light_font"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/senderId3"
                            android:text="@string/phone_num_placeholder"
                            android:textSize="@dimen/sender_id_text_size"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:visibility="gone"
                            android:textColor="@color/light_font"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/messageDetails3"
                            android:textSize="@dimen/default_text_size"
                            android:text="Readymade snackwave austin, chicharrones messenger bag leggings salvia locavore irony keffiyeh?"
                            android:gravity="start"
                            android:layout_marginStart="@dimen/card_margin_start"
                            android:layout_marginEnd="@dimen/card_margin_end"
                            android:textColorLink="#0000ff"
                            android:textColor="@color/light_font"
                            android:linksClickable="true"
                            android:autoLink="all"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/timeDate3"
                            android:visibility="visible"
                            android:textSize="@dimen/time_date_text_size"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:textColor="@color/light_font"
                            android:text="@string/placeholder_date"
                            android:layout_marginBottom="@dimen/time_date_margin_btm"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout3"
                android:layout_marginTop="30dp"
                android:gravity="end"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/card_margin_start"
                    android:layout_marginRight="@dimen/card_margin_end"
                    android:layout_marginBottom="@dimen/card_chat_margin_btm"
                    app:cardCornerRadius="@dimen/card_chat_corner_radius"
                    android:elevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/sent_chat_bubble_color"
                    android:id="@+id/chatBubble4">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type_not_found"
                            android:textSize="@dimen/type_text_size"
                            android:textStyle="bold"
                            android:id="@+id/type4"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:visibility="gone"
                            android:textColor="@color/light_font"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/senderId4"
                            android:text="@string/phone_num_placeholder"
                            android:textSize="@dimen/sender_id_text_size"
                            android:textStyle="bold"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:visibility="gone"
                            android:textColor="@color/light_font"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/messageDetails4"
                            android:textSize="@dimen/default_text_size"
                            android:text="Master cleanse semiotics cronut, helvetica 8-bit live-edge kitsch umami jianbing cold-pressed bitters intelligentsia."
                            android:gravity="start"
                            android:layout_marginStart="@dimen/card_margin_start"
                            android:layout_marginEnd="@dimen/card_margin_end"
                            android:textColorLink="#0000ff"
                            android:textColor="@color/light_font"
                            android:linksClickable="true"
                            android:autoLink="all"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/timeDate4"
                            android:visibility="visible"
                            android:textColor="@color/light_font"
                            android:textSize="@dimen/time_date_text_size"
                            android:layout_marginStart="@dimen/sms_rv_margin_start"
                            android:layout_marginEnd="@dimen/sms_rv_margin_end"
                            android:text="@string/placeholder_date"
                            android:layout_marginBottom="@dimen/time_date_margin_btm"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

