<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:application="http://schemas.android.com/apk/res-auto"
    package="nyc.c4q.jonathancolon.inContaq">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".contactlist.faceapi.FaceClient"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".contactlist.activities.ContactListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".contactlist.activities.ContactViewPagerActivity" />

        <service android:name=".notifications.ContactNotificationService" />

        <receiver android:name=".utlities.sms.SmsReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity android:name=".utlities.sms.SmsSender" />
        <activity android:name=".contactlist.activities.PhotoFeedActivity" />
        <activity android:name=".contactlist.activities.RegisterPhotoActivity" />
        <activity android:name=".contactlist.activities.DetectionLogActivity" />
        <activity android:name=".contactlist.activities.SelectImageActivity" />
        <activity android:name=".contactlist.activities.SplashScreenActivity" />
        <activity android:name=".contactlist.activities.IdentificationActivity" />
        <activity android:name=".contactlist.activities.IdentificationLogActivity" />
        <activity android:name=".contactlist.activities.PersonGroupListActivity" />
        <activity android:name=".contactlist.activities.PersonGroupActivity" />
        <activity android:name=".contactlist.activities.PersonActivity" />
        <activity android:name=".contactlist.activities.AddFaceToPersonActivity"></activity>
    </application>

</manifest>